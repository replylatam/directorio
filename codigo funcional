    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginForm = document.getElementById('login-form');
            const mainContainer = document.getElementById('main-container');
            const loginContainer = document.getElementById('login-container');
            const errorMessage = document.getElementById('error-message');
            const welcomeHeader = document.getElementById('welcome-header');
            const logoutButton = document.getElementById('logout-button');
            const adminSection = document.getElementById('admin-management-section');
            const adminDivider = document.getElementById('admin-divider');

            const operadoresTableBody = document.querySelector('#operadores-table tbody');
            const clientesTableBody = document.querySelector('#clientes-table tbody');

            const newOperadorForm = document.getElementById('new-operador-form');
            const opCreationMessage = document.getElementById('op-creation-message');
            const newClienteForm = document.getElementById('new-cliente-form');
            const clientCreationMessage = document.getElementById('client-creation-message');


            // üîë ARRAY 1: USUARIOS DE ACCESO (admin y operadores)
            let usuariosAcceso = [
                { id: 0, user: "admin", password: "123", rol: "admin" }, // Contrase√±a cambiada a '123'
                { id: 100, user: "op_mex", password: "op1", rol: "operador" }, 
                { id: 101, user: "op_esp", password: "op2", rol: "operador" }
            ];

            // üè¢ ARRAY 2: DATOS DEL DIRECTORIO DE CLIENTES
            let clientesDirectorio = [
                { id: 1, nombre: "Acme Corp", email: "info@acme.com", password: "acme_pass", pais: "Espa√±a", notas: "Cliente principal" },
                { id: 2, nombre: "Beta Solutions", email: "contacto@beta.com", password: "beta_pass", pais: "M√©xico", notas: "Pr√≥ximo vencimiento" }
            ];
            
            // Funci√≥n gen√©rica para dibujar tablas
            function dibujarTablas() {
                // 1. DIBUJAR TABLA DE OPERADORES (Solo si es visible)
                if (!adminSection.classList.contains('hidden')) {
                    operadoresTableBody.innerHTML = '';
                    usuariosAcceso.forEach(u => {
                        const fila = operadoresTableBody.insertRow();
                        fila.insertCell().textContent = u.user;
                        fila.insertCell().textContent = u.password; 
                        fila.insertCell().textContent = u.rol.toUpperCase();
                    });
                }
                
                // 2. DIBUJAR TABLA DE CLIENTES
                clientesTableBody.innerHTML = '';
                clientesDirectorio.forEach(cliente => {
                    const fila = clientesTableBody.insertRow();
                    fila.insertCell().textContent = cliente.nombre;
                    fila.insertCell().textContent = cliente.email;
                    fila.insertCell().textContent = cliente.password;
                    fila.insertCell().textContent = cliente.pais;
                    fila.insertCell().textContent = cliente.notas;
                    
                    // Celda QR
                    const celdaQR = fila.insertCell();
                    const qrId = `qr-client-${cliente.id}`;
                    celdaQR.innerHTML = `<div id="${qrId}"></div>`;

                    // Data para el QR
                    const qrData = `Cliente: ${cliente.nombre}, Email: ${cliente.email}, Pais: ${cliente.pais}`;
                    
                    // Generar el c√≥digo QR
                    setTimeout(() => {
                        if(document.getElementById(qrId)) {
                            new QRCode(document.getElementById(qrId), {
                                text: qrData,
                                width: 64,
                                height: 64,
                                correctLevel : QRCode.CorrectLevel.H
                            });
                        }
                    }, 0);
                });
            }

            // --- L√≥gica del Login ---
            loginForm.addEventListener('submit', function(event) {
                event.preventDefault(); 
                
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                
                // Buscar el usuario de acceso en el array
                const usuarioActual = usuariosAcceso.find(u => u.user === username && u.password === password);

                if (usuarioActual) {
                    // Login exitoso
                    loginContainer.classList.add('hidden');
                    mainContainer.classList.remove('hidden');
                    errorMessage.classList.add('hidden');
                    welcomeHeader.textContent = `Bienvenido, ${usuarioActual.user} (${usuarioActual.rol.toUpperCase()})`;
                    
                    // Control de acceso y visualizaci√≥n por rol
                    if (usuarioActual.rol === 'admin') {
                        adminSection.classList.remove('hidden');
                        adminDivider.classList.remove('hidden');
                    } else {
                        adminSection.classList.add('hidden');
                        adminDivider.classList.add('hidden');
                    }
                    
                    // Dibujar ambas tablas (la de operadores se dibuja solo si es visible)
                    dibujarTablas(); 

                } else {
                    // Login fallido
                    errorMessage.classList.remove('hidden');
                }
            });

            // --- L√≥gica para Crear Nuevo OPERADOR (Solo admin) ---
            newOperadorForm.addEventListener('submit', function(event) {
                event.preventDefault();
                
                const newUser = document.getElementById('new-operador-cliente').value;
                const newPass = document.getElementById('new-operador-password').value;
                
                // Validaci√≥n simple de unicidad
                if (usuariosAcceso.some(u => u.user === newUser)) {
                    alert('Error: Ya existe un usuario de acceso con ese nombre.');
                    return;
                }

                // Generar ID
                const maxId = usuariosAcceso.reduce((max, u) => (u.id > max ? u.id : max), 0);
                const newId = maxId + 1;

                // Crear el nuevo objeto operador
                const nuevoOperador = {
                    id: newId,
                    user: newUser,
                    password: newPass, 
                    rol: 'operador'
                };

                usuariosAcceso.push(nuevoOperador);
                
                // Recargar tabla de operadores
                dibujarTablas();

                // Mostrar mensaje de √©xito y limpiar formulario
                opCreationMessage.classList.remove('hidden');
                setTimeout(() => opCreationMessage.classList.add('hidden'), 3000);
                newOperadorForm.reset();
            });

            // --- L√≥gica para Cargar Nuevo CLIENTE (Directorio) ---
            newClienteForm.addEventListener('submit', function(event) {
                event.preventDefault();
                
                const newName = document.getElementById('new-client-name').value;
                const newEmail = document.getElementById('new-client-email').value;
                const newPassword = document.getElementById('new-client-password').value;
                const newPais = document.getElementById('new-client-pais').value;
                const newNotas = document.getElementById('new-client-notas').value;

                // Generar ID
                const maxId = clientesDirectorio.reduce((max, c) => (c.id > max ? c.id : max), 0);
                const newId = maxId + 1;

                // Crear el nuevo objeto cliente
                const nuevoCliente = {
                    id: newId,
                    nombre: newName,
                    email: newEmail,
                    password: newPassword,
                    pais: newPais,
                    notas: newNotas
                };

                clientesDirectorio.push(nuevoCliente);

                // Recargar tabla de clientes
                dibujarTablas();

                // Mostrar mensaje de √©xito y limpiar formulario
                clientCreationMessage.classList.remove('hidden');
                setTimeout(() => clientCreationMessage.classList.add('hidden'), 3000);
                newClienteForm.reset();
            });

            // --- L√≥gica del Logout ---
            logoutButton.addEventListener('click', () => {
                mainContainer.classList.add('hidden');
                loginContainer.classList.remove('hidden');
                loginForm.reset(); 
            });
        });
        
        /*
        NOTA FINAL DE SEGURIDAD:
        * Recuerda que los datos (usuarios, clientes y contrase√±as) se pierden al recargar la p√°gina 
          porque se almacenan en variables de JavaScript.
        * Las contrase√±as se gestionan en texto plano.
        * Para una soluci√≥n persistente y segura, se requiere un servidor y una base de datos.
        */
    </script>
</body>
</html>
